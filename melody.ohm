Melody {
  Expr
    = BlockDeclaration
    | Sequence
  
  BlockDeclaration
    = identifier "{" Sequence "}"
    
  Sequence (a sequence of notes)
    = "("* chord+ ")"*
    
  chord
    = note+
    
  note
    = (modnote | notebase) digit* 
      
  modnote
    = notebase (flat | sharp)
   
  notebase
    = "a".."g"
    
  flat
    = ","
    
  sharp
    = "'"
  
  identifier
    = letter+
}
